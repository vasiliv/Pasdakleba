@model Sale

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">წაშალე ფასდაკლება</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" class="row">
            @* When the form is submitted, the Id value is sent to the server *@
            <input asp-for="Id" hidden />
            @* <input asp-for="Brand" hidden /> *@
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="BrandId" disabled class="form-control border shadow" />
                    <label asp-for="BrandId" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="SaleTypeId" disabled class="form-control border shadow" />
                    <label asp-for="SaleTypeId" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Priority" disabled class="form-control border shadow" />
                    <label asp-for="Priority" class="ms-2"></label>                    
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="BrandId" disabled class="form-control border shadow" />
                    <label asp-for="BrandId" class="ms-2"></label>                    
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="ImageUrl" disabled class="form-control border shadow" />
                    <label asp-for="ImageUrl" class="ms-2"></label>                    
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Description" disabled class="form-control border shadow" />
                    <label asp-for="Description" class="ms-2"></label>                    
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="StartDate" disabled type="date" class="form-control border shadow" />
                    <label asp-for="StartDate" class="ms-2"></label>                    
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="EndDate" disabled type="date" class="form-control border shadow" />
                    <label asp-for="EndDate" class="ms-2"></label>                    
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            წაშლა
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Admin123456" asp-action="Index" class="btn btn-secondary w-100">
                            გამოსვლა
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@* client side validation *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
 }