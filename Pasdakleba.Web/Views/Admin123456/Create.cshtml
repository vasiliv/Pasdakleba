@model Sale

<div class="w-100 card border-0 p-4">

    <div class="card-header bg-success bg-gradient ml-0 py-3">

        <div class="row">

            <div class="col-12 text-center">

                <h2 class="text-white py-2">შექმენი ფასდაკლება</h2>

            </div>

        </div>

    </div>

    <div class="card-body border p-4">

        <form method="post" class="row">

            <div class="p-3">

                <div class="form-floating py-1 col-12">
                    <input asp-for="Priority" class="form-control border shadow" />
                    <label asp-for="Priority" class="ms-2"></label>
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="BrandId" class="form-control border shadow" />
                    <label asp-for="BrandId" class="ms-2"></label>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="ImageUrl" class="form-control border shadow" />
                    <label asp-for="ImageUrl" class="ms-2"></label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Description" class="form-control border shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="StartDate" type="date" class="form-control border shadow" />
                    <label asp-for="StartDate" class="ms-2"></label>
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="EndDate" type="date" class="form-control border shadow" />
                    <label asp-for="EndDate" class="ms-2"></label>
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            შექმნა
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Admin123456" asp-action="Index" class="btn btn-secondary w-100">
                            გამოსვლა
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@* client side validation *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
 }