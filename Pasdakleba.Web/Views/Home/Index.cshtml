@model HomeVM

<h1>ყველა ფასდაკლება ერთ სივრცეში</h1>

<div>
    <form method="post" style="background-color:cornflowerblue">
        <div class="row p-0 mx-0 py-4">

            <div class="col-12 col-md-5  offset-md-1 pl-2  pr-2 pr-md-0">
                <div class="form-group">
                    <label>Start Date</label>
                    <input asp-for="SaleStart" type="date" class="form-control" />
                </div>
                <div class="form-group">
                    <label>End Date</label>
                    <input asp-for="SaleEnd" type="date" class="form-control" />
                </div>
            </div>

            <div class="col-4 col-md-2 pt-4 pr-2">
                <div class="form-group">
                    <button type="button" class="btn btn-success btn-block">
                        <i class="bi bi-search"></i>  &nbsp; Check Availability
                    </button>
                </div>
            </div>
        </div>

        <div id="VillasList">
            <div class="row px-lg-5 m-lg-4 m-sm-0 px-sm-0" style="--bs-gutter-x:0">
                @foreach (var sale in Model.SaleList)
                {
                    <div class="p-4 col-md-12 col-lg-6">
                        <div class="row" style="border-radius:5px; border: 1px solid #aaa">
                            <div class="col-4 p-2">
                                <img class="d-block w-100" style="border-radius:5px;" src="@sale.ImageUrl">
                            </div>
                            <div class="col-8">
                                <div class="d-flex justify-content-between">
                                    <p class="card-title text-warning" style="font-size:xx-large">@sale.Brand.NameGeo</p>
                                    <div class="pt-2">
                                        <button type="button" class="btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target='#exampleModal-@(11)'>
                                            ვრცლად
                                        </button>
                                    </div>
                                </div>
                                <p class="card-text">
                                    Villa Description
                                </p>
                            </div>
                            <div class="col-12">
                                <div class="row pb-3 pt-2">
                                    <div class="col-4">
                                        <a class="btn btn-success form-control btn-block">
                                            Book
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <span class="">Max Occupancy : 11 adults </span><br />
                                        <span class=" pt-1">Villa Size : 11 sqft</span><br />
                                    </div>
                                    <div class="col-4">
                                        <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px;">
                                            USD
                                            <span style="border-bottom:1px solid #ff6a00">
                                                $11
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="exampleModal-@(11)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-xl" style="border: 1px solid #aaa; border-radius:7px;">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-3 text-success" id="exampleModalLabel">Villa Details</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body m-0">
                                    Villa DETAILS
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Close</button>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </form>
</div>

